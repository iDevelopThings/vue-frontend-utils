{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/lib/types",
    "outDir": "dist",
    "skipLibCheck": true,
  },
  "include": [
    "src/VuePlugin/**/*",
  ]
}
